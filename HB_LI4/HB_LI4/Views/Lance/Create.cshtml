@model HB_LI4.Models.Lance

@{
    ViewData["Title"] = "Create";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Heritage Bids | Criar lance</title>
</head>

<style>
    {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
    }

body {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    background-image: url('/css/scenarium-antique-mesa.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    margin: 0;
    font-family: 'Arial', sans-serif;
}


.wrapper {
    width: 500px;
    background: rgb(82, 88, 71);
    color: white;
    border-radius: 10px;
    padding: 10px 40px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
}

    .wrapper h1 {
        font-size: 36px;
        text-align: center;
    }

    .wrapper .form-group {
            position: relative;
            width: 100px;
            height: 50px;
            font-family: 'Arial', sans-serif;
    }

    .form-group .asp-for {
        width: 100%;
        height: 100%;
        background: transparent;
        border: none;
        outline: none;
        border: 2px solid rgba(255, 255, 255, .2);
        border-radius: 100 px;
        font-size: 16px;
        color: #fff;
        border-radius: 10px;
        padding: 20px 20px;
    }


    .wrapper .form-group {
        position: relative;
        width: 100%;
        height: 100%;
        font-family: 'Arial', sans-serif;
    }

    .form-group .asp-for {
        width: 100%;
        height: 100%;
        background: transparent;
        border: none;
        outline: none;
        border: 2px solid rgba(255, 255, 255, .2);
        border-radius: 100 px;
        font-size: 16px;
        color: #fff;
        border-radius: 10px;
    }

        .form-group .asp-for:hover {
            background: #ccc;
            color: #fff;
        }

    .wrapper .btn.btn-primary {
        width: 100%;
        height: 40px;
        background: #fff;
        border: none;
        outline: none;
        border-radius: 40px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        cursor: pointer;
        font-size: 20px;
        color: #333;
        font-weight: 800;
        margin-top: 20px;
    }

        .wrapper .btn.btn-primary:hover {
            background: #ccc;
            color: #fff;
        }


    .wrapper .back {
        font-size: 14.5px;
        text-align: center;
        margin-top: 20px;
    }

    .back p a {
        color: #fff;
        text-decoration: none;
        font-weight: 600;
    }

        .back p a:hover {
            text-decoration: underline
        }
</style>

<body>
    <div class="wrapper">
        <h1>Criar um lance</h1>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormaPagamento" class="control-label"></label>
                <select asp-for="FormaPagamento" class="form-control">
                    <option value="">Selecione uma forma de pagamento</option>
                    <option value="PagarNaLoja">Pagar na loja</option>
                    <option value="Multibanco">Multibanco</option>
                    <option value="MbWay">MbWay</option>
                </select>
                <span asp-validation-for="FormaPagamento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div class="back">
            <a href="javascript:history.go(-1);">Voltar a Visualizar Leil√µes</a>
        </div>

    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
