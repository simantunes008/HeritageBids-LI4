@model HB_LI4.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

    <style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-image: url('/css/scenarium-antique-mesa.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        margin: 0;
        font-family: 'Arial', sans-serif;
    }

        .wrapper {
            width: calc(50% - 20px);
            max-width: 420px;
            background: rgb(82, 86, 65);
            color: white;
            border-radius: 10px;
            padding: 30px;
            margin: auto; 
            text-align: center;
            font-size: 18px;
            position: relative;
        }

    .logo {
        width: 20%;
        height: auto;
        margin-top: -265px;
        margin-left: -327px;
    }

        .back-link {
            position: absolute;
            top: 10px;
            right: 20px;
            color: white;
            font-size: 20px;
            text-decoration: none;
        }

    .form-group {
        margin-bottom: 10px;
    }

    input[type="submit"] {
        width: calc(100% - 20px);
    }

    .link-overlay,
    p a.link-overlay {
        color: white;
    }
    </style>
<header>
    <img srcset="../../css/HeritageBidsno.png" alt="Logo" class="logo">
</header>
<body>
   
    <div class="wrapper">
        <h1>Edit</h1>
        <h4>Cliente</h4>
        <hr/>
        <div class="row justify-content-center">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id"/>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PalavraPasse" class="control-label"></label>
                        <input asp-for="PalavraPasse" class="form-control"/>
                        <span asp-validation-for="PalavraPasse" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telemovel" class="control-label"></label>
                        <input asp-for="Telemovel" class="form-control"/>
                        <span asp-validation-for="Telemovel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary"/>
                    </div>
                </form>
            <div>
                <a class="link-overlay" asp-action="Index" asp-controller="Menu">Voltar ao menu</a>
            </div>

        </div>
    </div>
</body>

